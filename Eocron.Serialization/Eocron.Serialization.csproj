<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Authors>eocron</Authors>
		<Company />
		<PackageId>Eocron.Serialization</PackageId>
		<Product>Eocron.Serialization</Product>
		<Copyright />
		<PackageProjectUrl>https://github.com/eocron/Algorithm</PackageProjectUrl>
		<RepositoryUrl>https://github.com/eocron/Algorithm.git</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>algorithm;serialization;eocron</PackageTags>
		<Description>
			This client library contains some basic and usefull serialization alghorithms for my work.
		</Description>
		<PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
		<Version>1.0.0</Version>
		<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
		<PackageReference Include="protobuf-net" Version="3.1.22" />
		<PackageReference Include="YamlDotNet" Version="12.0.1" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\README.md" Pack="true" PackagePath="\" />
		<None Include="..\LICENSE.txt" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Xml\Transforms\XsltResources.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>XsltResources.resx</DependentUpon>
	  </Compile>
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Xml\Transforms\XsltResources.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>XsltResources.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>
</Project>